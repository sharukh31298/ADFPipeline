{
	"name": "Validating_Credentials",
	"type": "Microsoft.DataFactory/factories/linkedservices",
	"properties": {
		"description": "Validating_Credentials",
		"parameters": {
			"AppTenantId": {
				"type": "string"
			},
			"AppClientId": {
				"type": "string"
			},
			"AppClientCode": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "RestService",
		"typeProperties": {
			"url": "https://api.powerbi.com/v1.0/myorg/admin/groups?$top=1",
			"enableServerCertificateValidation": true,
			"authenticationType": "OAuth2ClientCredential",
			"clientId": "@{linkedService().AppClientId}",
			"clientSecret": {
				"type": "SecureString",
				"value": "**********"
			},
			"tokenEndpoint": "@{concat('https://login.microsoftonline.com/',linkedService().AppTenantId,'/oauth2/v2.0/token')}"
		}
	}
